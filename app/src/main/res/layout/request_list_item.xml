<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:background="@drawable/red_button_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_blood_transfusion"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:layout_margin="5dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/reqstUser"
                    android:text="Alamin Hossain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/posted"
                    android:text="11:30 PM, 17/10/2018"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/targetBG"
                        android:text=" Looking for: AB+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text=" Blood Donor!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_below="@id/targetBG"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/reqstLocation"
                            android:text="Kushtia, Khulna"
                            android:textSize="10sp"
                            android:padding="5dp"
                            android:drawableLeft="@drawable/ic_place"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/targetCN"
                            android:layout_gravity="end"
                            android:textSize="10sp"
                            android:padding="5dp"
                            android:drawableLeft="@drawable/ic_phone"
                            android:text="+8801234567890"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
